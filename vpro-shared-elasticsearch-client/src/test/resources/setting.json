{
    "index": {
        "mapper": {
            "dynamic": false
        },
        "analysis": {
            "analyzer": {
                "default": {
                    "type": "dutch"
                },
                "dutch": {
                    "type": "custom",
                    "tokenizer": "icu_tokenizer",
                    "filter": ["dutch", "icu_folding"]
                },
                "lowercase": {
                    "type": "custom",
                    "tokenizer": "keyword",
                    "filter": ["lowercase"]
                },
                "reverse": {
                    "type": "custom",
                    "tokenizer": "keyword",
                    "filter": ["reverse"]
                },
                "extension": {
                    "type": "custom",
                    "tokenizer": "extension",
                    "filter": ["lowercase"]
                }
            },
            "filter": {
                "dutch": {
                    "language": "Dutch",
                    "type": "snowball"
                }
            },
            "tokenizer": {
                "extension": {
                    "type": "pattern",
                    "pattern": "\\.([\\w\\d]+)(?:($|\\?|#|\\s))",
                    "group": 1
                }
            }
        }
    }
}
