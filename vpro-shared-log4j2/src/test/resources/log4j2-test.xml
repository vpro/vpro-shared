<?xml version="1.0"?>
<Configuration status="INFO" monitorInterval="0">
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601}&#x09;%highlight{%5.5p}&#x09;%C{1}&#x09;%M.%L&#x09;%m&#x09;(%t)%n"  charset="UTF-8"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="${sys:log4j2.root.level:-INFO}">
      <Appender-Ref ref="stdout" />
    </Root>
  </Loggers>
</Configuration>
