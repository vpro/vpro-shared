<?xml version="1.0"?>
<Configuration status="INFO">
  <Properties>
    <Property name="pattern" value="%d{ISO8601}&#x09;%highlight{%5.5p}&#x09;%C{1}&#x09;%M.%L&#x09;%m&#x09;(%t)%n" />
  </Properties>
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <Property name="pattern" value="${pattern}" disableAnsi="false"  />
    </Console>
  </Appenders>
  <Loggers>
    <Logger level="DEBUG" name="nl.vpro.util.FileCachingInputStreamTest" />
    <Root level="INFO">
      <Appender-Ref ref="stdout" />
    </Root>
  </Loggers>
</Configuration>
