<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>nl.vpro</groupId>
    <artifactId>vpro-parent</artifactId>
    <version>R20100901</version>
  </parent>

  <groupId>nl.vpro.shared</groupId>
  <artifactId>shared-parent</artifactId>
  <version>0.9-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>shared-parent</name>

  <build>
    <defaultGoal>install</defaultGoal>
  </build>

  <modules>
    <module>shared-configuration</module>
    <module>shared-domain</module>
    <module>shared-integration</module>
    <module>shared-services</module>
    <module>shared-web</module>
    <module>shared-ws</module>
    <module>shared-util</module>
    <module>shared-test</module>
    <module>shared-transfer</module>
  </modules>

  <scm>
    <connection>scm:svn:svn+ssh://subversion.vpro.nl/export/svn/nl/vpro/shared/branches/REL-0.5</connection>
    <developerConnection>scm:svn:svn+ssh://subversion.vpro.nl/export/svn/nl/vpro/shared/branches/REL-0.5</developerConnection>
    <url>https://subversion.vpro.nl/cgi-bin/viewvc.cgi/shared-parent</url>
  </scm>

  <distributionManagement>
    <repository>
      <id>nexus-releases</id>
      <url>http://nexus.vpro.nl/content/repositories/releases</url>
    </repository>

    <snapshotRepository>
      <id>nexus-snapshots</id>
      <name>Internal Snapshots</name>
      <url>http://nexus.vpro.nl/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <properties>
    <spring.version>3.1.1.RELEASE</spring.version>
    <junit.version>4.6</junit.version>
    <mycila.version>2.3</mycila.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>nl.vpro.shared</groupId>
        <artifactId>shared-domain</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>nl.vpro.shared</groupId>
        <artifactId>shared-integration</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>nl.vpro.shared</groupId>
        <artifactId>shared-services</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>nl.vpro.shared</groupId>
        <artifactId>shared-web</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.8.2</version>
        <scope>test</scope>
      </dependency>


      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-test</artifactId>
        <version>${spring.version}</version>
      </dependency>
      <dependency>
        <groupId>com.mycila.testing</groupId>
        <artifactId>mycila-testing-api</artifactId>
        <version>${mycila.version}</version>
      </dependency>
      <dependency>
        <groupId>com.mycila.testing.plugins</groupId>
        <artifactId>mycila-testing-spring</artifactId>
        <version>${mycila.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>
